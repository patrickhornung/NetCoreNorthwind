}

<h2>Chat with us!</h2>
<div class="container">
    <div class="row p-1">
        <div class="col-1">
            User
        </div>
        <div class="col-5">
            <input type="text" id="userInput" />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-1">
            Message
        </div>
        <div class="col-5">
            <input type="text" id="messageInput" class="w-100" />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <hr />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
}